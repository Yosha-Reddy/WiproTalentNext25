import java.util.*;
class revenum
{
    public static void main(String[] args)
    {
        int i,n,r,temp,sum=0;
        Scanner sc=new Scanner(System.in);
        System.out.println("enterthe number:");
        n=sc.nextInt();
        temp=n;
        while(n!=0)
        {
            r=n%10;
            sum=sum*10+r;
            n=n/10;
        }
        System.out.println("reverse of number is: "+sum);
    }
}
